<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Transition" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_blue</item>
        <item name="colorPrimaryVariant">@color/black_white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black_white</item>
        <!-- Customize your theme here. -->

        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

    </style>
</resources>